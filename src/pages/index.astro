---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Mihir Desai">
  <main>
    <h1>Mihir Desai</h1>
    <p>
      <a href="https://github.com/mihirdezai">GitHub</a>
    </p>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    line-height: 1.6;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
  }

  p {
    font-size: 1.5rem;
    font-weight: 500;
    text-align: center;
    a {
      text-decoration: none;
    }
  }
</style>
